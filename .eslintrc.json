{
	"env": {
		"browser": true,
		"node": true,
		"es6": true,
		"jest": true
	},
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended",
		"prettier/@typescript-eslint",
		"plugin:prettier/recommended",
		"prettier"
	],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 2016,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint",
		"prettier",
		"node",
		"import",
		"promise",
		"standard"
	],
	"rules": {
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"prefer-destructuring": "error",
		"no-unused-vars": "error",
		"no-unused-expressions": "error",
		"no-unused-labels": "error",
		"camelcase": "warn",
		"comma-dangle": [
			"error",
			{ "imports": "never", "exports": "never", "functions": "never" }
		],
		"eqeqeq": "error",
		"indent": ["error", "tab"],
		"prefer-const": "error",
		"prefer-template": "error",
		"require-await": "error",
		"sort-imports": "error",
		"sort-keys": "error",
		"sort-vars": "error",
		"use-isnan": "error"
	}
}
